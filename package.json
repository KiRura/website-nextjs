{
	"name": "website-nextjs",
	"version": "0.1.0",
	"scripts": {
		"dev": "next dev --webpack",
		"dev:build": "bun run dep:gen && next build --webpack",
		"build": "bunx @chakra-ui/cli typegen ./src/theme/index.ts && bun run dev:build",
		"start": "next start",
		"lint": "biome lint && tsc",
		"check": "biome check && tsc",
		"check:fix": "biome check --write --unsafe && tsc",
		"dep:gen": "license-report --only=prod --config license-report-config.json > src/app/license/licenses.json",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
	"dependencies": {
		"@chakra-ui/react": "^3.30.0",
		"@emotion/react": "^11.14.0",
		"@opennextjs/cloudflare": "^1.14.7",
		"@supabase/supabase-js": "2.89.0",
		"date-fns": "^4.1.0",
		"microcms-js-sdk": "^3.2.0",
		"next": "^16.1.1",
		"next-themes": "^0.4.6",
		"next-turnstile": "^1.0.7",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-icons": "^5.5.0",
		"swr": "^2.3.8",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"license-report": "^6.8.1",
		"typescript": "^5.9.3",
		"wrangler": "^4.54.0"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@vercel/speed-insights",
		"esbuild",
		"rclone.js",
		"sharp",
		"workerd"
	],
	"engines": {
		"node": ">=22"
	}
}
