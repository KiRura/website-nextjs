{
	"name": "kirura-website-chakra-v3",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "bun run dep:gen && next build",
		"start": "next start",
		"check": "biome check --write --unsafe  . && tsc",
		"dep:gen": "license-report --only=prod --config license-report-config.json > src/app/license/licenses.json",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
	"dependencies": {
		"@chakra-ui/react": "^3.25.0",
		"@emotion/react": "^11.14.0",
		"@opennextjs/cloudflare": "^1.6.5",
		"date-fns": "^4.1.0",
		"microcms-js-sdk": "^3.2.0",
		"next": "~15.5.2",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-icons": "^5.5.0",
		"swr": "^2.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.8",
		"license-report": "^6.8.0",
		"typescript": "^5.9.2",
		"wrangler": "^4.33.0"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@vercel/speed-insights",
		"esbuild",
		"sharp",
		"workerd"
	]
}
